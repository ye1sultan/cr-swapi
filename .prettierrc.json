{
  "$schema": "https://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "useTabs": false,
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "es5",
  "semi": true,
  "bracketSpacing": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react$",
    "^next(/.*)?$",

    "<THIRD_PARTY_MODULES>",

    "^@apollo(.*)$",

    "^@hookform(.*)$",
    "^react-hook-form(.*)$",

    "^@/app(.*)$",
    "^@/src/app-pages(.*)$",
    "^@/src/features(.*)$",
    "^@/src/services(.*)$",
    "^@/src/queries(.*)$",
    "^@/src/helpers(.*)$",
    "^@/src/config(.*)$",
    "^@/src/constants(.*)$",
    "^@/src/hooks(.*)$",
    "^@/src/context(.*)$",
    "^@/src/utils(.*)$",
    "^@/src/styles(.*)$",
    "^@/src/widgets(.*)$",
    "^@/src/components(.*)$",
    "^sonner(.*)$",

    "^@/types(.*)$",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
